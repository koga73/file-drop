{
	"name": "@koga73/file-drop",
	"version": "1.0.0",
	"description": "A simple library to enable client-side file uploads via drag-and-drop or click",
	"main": "js/file-drop.js",
	"scripts": {
		"build": "npm run sass",
		"sass": "node-sass --include-path ./css ./css/file-drop.scss ./css/file-drop.css --output-style uncompressed",
		"watch": "nodemon -e sass,scss -x \"npm run sass\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/koga73/file-drop.git"
	},
	"keywords": [
		"file",
		"drop",
		"upload",
		"import",
		"load"
	],
	"author": "AJ Savino",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/koga73/file-drop/issues"
	},
	"homepage": "https://github.com/koga73/file-drop#readme",
	"devDependencies": {
		"node-sass": "^4.14.1",
		"nodemon": "^2.0.4"
	}
}
